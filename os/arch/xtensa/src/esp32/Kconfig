menu "Memory Configuration"

config ESP32_BT_RESERVE_DRAM
	int "Reserved BT DRAM"
	default 0

config ESP32_TRACEMEM_RESERVE_DRAM
	int "Reserved trace memory DRAM"
	default 0

config ESP32_ULP_COPROC_RESERVE_MEM
	int "Reserved ULP co-processor DRAM"
	default 0

endmenu # Memory Configuration

config ESP32_GPIO_IRQ
	bool "GPIO pin interrupts"
	---help---
		Enable support for interrupting GPIO pins

menu "UART configuration"
	depends on ESP32_UART

if ESP32_UART0

config ESP32_UART0_TXPIN
	int "UART0 Tx Pin"
	default 1
	range 0 39

config ESP32_UART0_RXPIN
	int "UART0 Rx Pin"
	default 3
	range 0 39

if SERIAL_IFLOWCONTROL || SERIAL_OFLOWCONTROL
config ESP32_UART0_RTSPIN
	int "UART0 RTS Pin"
	default 22
	range 0 39

config ESP32_UART0_CTSPIN
	int "UART0 CTS Pin"
	default 19
	range 0 39

endif # SERIAL_IFLOWCONTROL || SERIAL_OFLOWCONTROL
endif # ESP32_UART0

if ESP32_UART1

config ESP32_UART1_TXPIN
	int "UART1 Tx Pin"
	default 10
	range 0 39

config ESP32_UART1_RXPIN
	int "UART1 Rx Pin"
	default 9
	range 0 39

if SERIAL_IFLOWCONTROL || SERIAL_OFLOWCONTROL
config ESP32_UART1_RTSPIN
	int "UART1 RTS Pin"
	default 11
	range 0 39

config ESP32_UART1_CTSPIN
	int "UART1 CTS Pin"
	default 6
	range 0 39

endif # SERIAL_IFLOWCONTROL || SERIAL_OFLOWCONTROL
endif # ESP32_UART1

if ESP32_UART2

config ESP32_UART2_TXPIN
	int "UART2 Tx Pin"
	default 17
	range 0 39

config ESP32_UART2_RXPIN
	int "UART2 Rx Pin"
	default 16
	range 0 39

if SERIAL_IFLOWCONTROL || SERIAL_OFLOWCONTROL
config ESP32_UART2_RTSPIN
	int "UART2 RTS Pin"
	default 7
	range 0 39

config ESP32_UART2_CTSPIN
	int "UART2 CTS Pin"
	default 8
	range 0 39

endif # SERIAL_IFLOWCONTROL || SERIAL_OFLOWCONTROL
endif # ESP32_UART2

endmenu # UART configuration


menu "I2C configuration"
	depends on ESP32_I2C
	
if ESP32_I2C0

choice
	prompt "I2C 0 mode"
	default ESP32_I2C0_MODE_MASTER

config ESP32_I2C0_MODE_MASTER
	bool "I2C0 master mode"

config ESP32_I2C0_MODE_SLAVE
	bool "I2C0 slave mode"

endchoice

config ESP32_I2C0_SCLK_PIN
	int "I2C 0 Sclk Pin"
	default 4
	range 0 39

config ESP32_I2C0_SCLK_PULLUP_EN
	bool "I2C 0 Sclk Pullup enable"
	default n

config ESP32_I2C0_SDA_PIN
	int "I2C0 SDA Pin"
	default 5
	range 0 39
	
config ESP32_I2C0_SDA_PULLUP_EN
	bool "I2C0 SDA Pullup enable"
	default n
	
endif # ESP32_I2C0

if ESP32_I2C1

choice
	prompt "I2C 1 mode"
	default ESP32_I2C1_MODE_MASTER

config ESP32_I2C1_MODE_MASTER
	bool "I2C1 master mode"

config ESP32_I2C1_MODE_SLAVE
	bool "I2C1 slave mode"

endchoice

config ESP32_I2C1_SCLK_PIN
	int "I2C 1 SCLK Pin"
	default 18
	range 0 39

config ESP32_I2C1_SCLK_PULLUP_EN
	bool "I2C 1 Sclk Pullup enable"
	default n

config ESP32_I2C1_SDA_PIN
	int "I2C 1 SDA Pin"
	default 19
	range 0 39
	
config ESP32_I2C1_SDA_PULLUP_EN
	bool "I2C1 SDA Pullup enable"
	default n

endif # ESP32_I2C1

endmenu # I2C configuration

source arch/xtensa/src/esp32/spi_flash/Kconfig

menu "SPI configuration"
	depends on ESP32_SPI

config ESP32_SPI_CS
	int "SPI CS channel"
	default 0
	range 0 2
	---help---
		use SPI_SELECT to select this CS channel

if ESP32_SPI2

config GPIO_SPI2_CS0_PIN
	int "HSPI CS0 Pin"
	default 22
	range 0 39
	depends on ESP32_SPI_CS != 1 && ESP32_SPI_CS != 2

config GPIO_SPI2_CS1_PIN
	int "HSPI CS1 Pin"
	default 22
	range 0 39
	depends on ESP32_SPI_CS != 0 && ESP32_SPI_CS != 2

config GPIO_SPI2_CS2_PIN
	int "HSPI CS2 Pin"
	default 22
	range 0 39
	depends on ESP32_SPI_CS != 0 && ESP32_SPI_CS != 1

config GPIO_SPI2_CLK_PIN
	int "HSPI CLK Pin"
	default 19
	range 0 39

config GPIO_SPI2_MISO_PIN
	int "HSPI MISO Pin"
	default 25
	range 0 39

config GPIO_SPI2_MOSI_PIN
	int "HSPI MOSI Pin"
	default 23
	range 0 39

config SPI2_DMA_CHANNEL
	int "HSPI DMA Channel, 0 is disable"
	default 1
	range 0 2

endif # ESP32_SPI2

if ESP32_SPI3

config GPIO_SPI3_CS0_PIN
	int "VSPI CS0 Pin"
	default 22
	range 0 39
	depends on ESP32_SPI_CS != 1 && ESP32_SPI_CS != 2

config GPIO_SPI3_CS1_PIN
	int "VSPI CS1 Pin"
	default 22
	range 0 39
	depends on ESP32_SPI_CS != 0 && ESP32_SPI_CS != 2

config GPIO_SPI3_CS2_PIN
	int "VSPI CS2 Pin"
	default 22
	range 0 39
	depends on ESP32_SPI_CS != 0 && ESP32_SPI_CS != 1

config GPIO_SPI3_CLK_PIN
	int "VSPI CLK Pin"
	default 19
	range 0 39

config GPIO_SPI3_MISO_PIN
	int "VSPI MISO Pin"
	default 25
	range 0 39

config GPIO_SPI3_MOSI_PIN
	int "VSPI MOSI Pin"
	default 23
	range 0 39

config SPI3_DMA_CHANNEL
	int "VSPI DMA Channel, 0 is disable"
	default 0
	range 0 2

endif # ESP32_SPI3

config SPI_DMA_MAX_DATALEN
	int "SPI DMA data length"
	default 4080
	range 32 4080

endmenu # SPI configuration
endif # ARCH_CHIP_ESP32
